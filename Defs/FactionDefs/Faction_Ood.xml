<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>OodKindFaction</defName>
    <label>Ood Kind</label>
    <description>A free colony of the usually captive Ood Kind.</description>
    <pawnsPlural>Ood Kind</pawnsPlural>
    <settlementGenerationWeight>.75</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <leaderTitle>Elder Ood</leaderTitle>
    <!--<hidden>true</hidden>-->
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Medieval</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>OodBackstory</li>
        </categories>
      </li>
    </backstoryFilters>
    <hairTags>
      <li>Urban</li>
    </hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Ood>50</Ood>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Ood>50</Ood>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <Ood>50</Ood>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Ood>100</Ood>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/OodIcon</settlementTexturePath>
    <factionIconPath>World/OodIcon</factionIconPath>
  </FactionDef>
</Defs>